---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import LogoLiriaGraphics from "../../public/logo_liria_graphics_002_vector.svg";

const repeatCount = 10;
---

<div class="w-full flex flex-col gap-6">
    <div class="w-fit flex flex-col items-start gap-3">
        <a
            href="https://eicosapenta.booth.pm/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-fit flex"
        >
            <Image
                src={LogoLiriaGraphics}
                alt="Liria Graphics"
                class="w-48 sm:w-64 h-12 object-cover flex-shrink-0"
            />
        </a>

        <div class="w-fit flex items-center gap-8">
            <a
                href="https://eicosapenta.booth.pm/"
                target="_blank"
                rel="noopener noreferrer"
                class="w-fit flex"
            >
                <div
                    class="flex items-center gap-1.5 text-neutral-500 hover:text-neutral-300"
                >
                    <p>booth.pm</p>
                    <Icon name="lucide:square-arrow-out-up-right" />
                </div>
            </a>

            <a
                href="https://documents.liria.work/liria-graphics"
                target="_blank"
                rel="noopener noreferrer"
                class="w-fit flex"
            >
                <div
                    class="flex items-center gap-1.5 text-neutral-500 hover:text-neutral-300"
                >
                    <p>documents</p>
                    <Icon name="lucide:square-arrow-out-up-right" />
                </div>
            </a>
        </div>
    </div>

    <div class="flex items-center gap-3 overflow-clip">
        {
            Array.from({ length: repeatCount }).map(() => (
                <div class="size-40 flex-shrink-0 rounded-lg bg-neutral-700" />
            ))
        }
    </div>
</div>
